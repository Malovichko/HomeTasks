<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/someDrawable">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/white"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>
    <item
        android:left="30dp"
        android:top="30dp"
        android:right="30dp"
        android:bottom="30dp"
        >
        <shape android:shape="rectangle">
            <size
                android:width="60dp"
                android:height="60dp" />
            <gradient
                android:angle="45"
                android:centerColor="@color/gray"
                android:endColor="@color/dark_gray"
                android:startColor="@color/light_gray" />
        </shape>
        <bitmap
            android:gravity="center" />
    </item>
    <item
        android:left="60dp"
        android:top="60dp"
        >
        <shape android:shape="rectangle">
            <size
                android:width="60dp"
                android:height="60dp" />
            <gradient
                android:angle="0"
                android:centerColor="@color/green"
                android:endColor="@color/green_dark"
                android:startColor="@color/light_green" />
        </shape>
        <bitmap
            android:gravity="center" />
    </item>
</layer-list>